[global/wm]
margin-top = 5
margin-bottom = 5

[bar/topbar]
width = 100%
height = 20
offset-x = 0
offset-y = 0
padding-right = 7
padding-left = 7

background = #383c4a
foreground = #ffffff

font-0 = System San Francisco:size=10
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=12;1"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=12;1"
font-3 = "Font Awesome 5 Brands:pixelsize=12;1"

modules-left = date title
modules-center = i3
modules-right = volume

override-redirect = false
wm-restack = i3

tray-position = right

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 5

label-unfocused-foreground = #666666
label-unfocused-padding = 2
label-visible-foregroud = #c700ff
label-visible-padding = 2
label-focused-foreground = #ffffff
label-focused-padding = 2
label-urgent-foreground = #ff9d00
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 5

date = "%d/%m/%y"
date-alt = " %d"

time = " %H:%M"
time-alt =  %H:%M

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <bar-volume>
label-volume = ""
label-volume-foreground = ${root.foreground}
label-muted = muted

bar-volume-width = 10
bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2

[module/title]
type = internal/xwindow
label-maxlen = 50
format-padding = 5
format-foregroud = #4F5B47

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = %essid% %downspeed:9%

label-disconnected = not connected
